# Database Configuration
# Local development database URL
DATABASE_URL="postgresql://postgres:passwo@localhost:5432/saas_dev"
# Direct connection URL for migrations (same as DATABASE_URL for local development)
DIRECT_URL="postgresql://postgres:password@localhost:5432/saas_dev"

# Authentication - Clerk
# Get these from https://dashboard.clerk.com
# CLERK_SECRET_KEY="sk_test_your_secret_key_here"
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_publishable_key_here"

# Next.js Configuration
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# Security & Rate Limiting
# Redis URL for rate limiting (optional for development)
RATE_LIMIT_REDIS_URL="redis://localhost:6379"

# Error Tracking - Sentry
# Get these from https://sentry.io
SENTRY_DSN="https://your_sentry_dsn_here@sentry.io/project_id"
NEXT_PUBLIC_SENTRY_DSN="https://your_sentry_dsn_here@sentry.io/project_id"

# Environment
NODE_ENV="development"

# Feature Flags
ENABLE_ANALYTICS="false"
ENABLE_DEBUG_LOGGING="true"

# Email Configuration (for future use)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your_email@gmail.com"
# SMTP_PASSWORD="your_app_password"

# File Storage (for future use)
