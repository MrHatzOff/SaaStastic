# ============================================
# TEST ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env.test and fill in your test credentials
#
# IMPORTANT: These should be SEPARATE test accounts from production!
# - Use Clerk's "Development" instance
# - Use Stripe's "Test Mode" keys
# - Use a separate test database

# --------------------------------------------
# DATABASE (Test Database Only!)
# --------------------------------------------
DATABASE_URL="postgresql://user:password@localhost:5432/saastastic_test"

# --------------------------------------------
# CLERK AUTHENTICATION (Test Instance)
# --------------------------------------------
# Get these from: https://dashboard.clerk.com/apps/YOUR_TEST_APP
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

# Clerk Test User Credentials
# Create a test user in your Clerk dashboard and use those credentials here
CLERK_TEST_USER_EMAIL="test@example.com"
CLERK_TEST_USER_PASSWORD="TestPassword123!"

# --------------------------------------------
# STRIPE (Test Mode Only!)
# --------------------------------------------
# Get these from: https://dashboard.stripe.com/test/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_test_..."

# Stripe Test Product IDs (create these in Stripe Test Mode)
STRIPE_STARTER_PRICE_ID="price_test_starter..."
STRIPE_PROFESSIONAL_PRICE_ID="price_test_professional..."
STRIPE_ENTERPRISE_PRICE_ID="price_test_enterprise..."

# --------------------------------------------
# APPLICATION
# --------------------------------------------
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="test"

# --------------------------------------------
# OPTIONAL: Monitoring (Test Instance)
# --------------------------------------------
# SENTRY_DSN="https://...@sentry.io/test"
